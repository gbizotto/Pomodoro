<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Timer style -->
    <style name="timer_style">
        <item name="android:textSize">@dimen/timer_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="active_timer_style" parent="@style/timer_style">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="inactive_timer_style" parent="@style/timer_style">
        <item name="android:textColor">@color/title</item>
    </style>

    <!-- History -->
    <style name="history_list_style">
        <item name="android:divider">@android:color/transparent</item>
    </style>

    <!-- History header -->
    <style name="history_header">
        <item name="android:textSize">@dimen/history_header_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginTop">@dimen/history_header_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/history_header_margin_vertical</item>
        <item name="android:layout_marginStart">@dimen/history_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/history_margin_horizontal</item>
    </style>

    <!-- History row -->
    <style name="history_row_duration">
        <item name="android:textSize">@dimen/history_duration_text_size</item>
        <item name="android:textColor">@color/subtitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/history_margin_horizontal</item>
    </style>

    <style name="history_row_status">
        <item name="android:textSize">@dimen/history_status_text_size</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:layout_marginStart">@dimen/history_margin_horizontal</item>
    </style>

    <style name="history_row_date_added">
        <item name="android:textSize">@dimen/history_date_added_text_size</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:layout_marginEnd">@dimen/history_margin_horizontal</item>
    </style>

</resources>
